<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/verification_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_elem_margin"
        android:text="@string/verification_text"
        android:textSize="@dimen/text_size_medium" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_elem_margin"
        app:hintTextAppearance="@style/TextAppearance.AppCompat">

        <EditText
            android:id="@+id/verification_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/verification_hint"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/verification_btn"
        style="@style/RoundedButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_elem_margin"
        android:layout_marginTop="@dimen/standard_elem_margin"
        android:background="@drawable/green_button"
        android:text="@string/continue_btn_text" />

    <TextView
        android:id="@+id/code_failure_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_elem_margin"
        android:gravity="center_horizontal"
        android:text="@string/code_failure_text"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>